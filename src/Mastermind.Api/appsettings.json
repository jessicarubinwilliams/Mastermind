{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/mastermind-.log",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "None"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": []
  },
  "CacheService": {
    "EnableDiagnostics": false,
    "DefaultAbsoluteExpirationSeconds": 0,
    "DefaultSlidingExpirationSeconds": 1800
  },
  "RandomApi": {
    "Name": "RandomApi",
    "BaseAddress": "https://www.random.org/",
    "IntegersEndpoint": "integers/",
    "TimeoutSeconds": 2
  },
  "GamePlay": {
    "DefaultAttemptLimit": 10,
    "DigitMin": 0,
    "DigitMax": 7,
    "SecretCombinationLength": 4,
    "SlidingExpirationSeconds": 1200
  }
}
